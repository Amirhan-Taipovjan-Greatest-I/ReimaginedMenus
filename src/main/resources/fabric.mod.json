{
  "schemaVersion": 1,
  "id": "reimaginedmenus",
  "version": "${version}",

  "name": "Reimagined Menus",
  "description": "Redesigns some of the menus to look more like bedrock, while keeping the Java feel!",
  "accessWidener" : "reimaginedmenus.accesswidener",
  "authors": [
    "Iamaprogrammer"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/reimaginedmenus/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.iamaprogrammer.reimaginedmenus.ReimaginedMenus"
    ]
  },
  "mixins": [
    "reimaginedmenus.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.17",
    "fabric-api": "*",
    "minecraft": "~1.19.4",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
